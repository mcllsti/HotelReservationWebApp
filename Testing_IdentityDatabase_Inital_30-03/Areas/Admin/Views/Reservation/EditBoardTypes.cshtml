@model Testing_IdentityDatabase_Inital_30_03.Areas.Admin.Models.AllBoardTypesDTO
@{
    ViewBag.Title = "Board Types";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Board Types</h2>

<br />
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<p>
    @Html.ActionLink("Add Board Type", "AddBoardType", null, new { @class = "btn btn-default" })
</p>
<table class="table">
    <tr>
        <th>
            Type
        </th>
        <th>
            Cost per night
        </th>
    </tr>

    @foreach (var item in Model.BoardTypes)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Board_Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BoardCosts)
            </td>
            <td>
                @Html.ActionLink("Edit Details", "AlterBoardTypes", new { Id = item.Id }) |
                @Html.ActionLink("Delete", "DeleteBoardType",
                       new { Id = item.Id },
                        new
                        {
                            onclick =
                        "return confirm('Are you sure you wish to delete this Board Type?');"
                        })
            </td>

        </tr>
    }
</table>

