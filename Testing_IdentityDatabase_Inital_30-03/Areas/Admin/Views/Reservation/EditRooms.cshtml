@model Testing_IdentityDatabase_Inital_30_03.Areas.Admin.Models.AllRoomsDTO

@{
    ViewBag.Title = "Rooms";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Rooms</h2>

<br />
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<p>
    @Html.ActionLink("Add Room", "AddRoom", null, new { @class = "btn btn-default" })
</p>
<table class="table">
    <tr>
        <th>
            Rooms
        </th>
        <th>

        </th>
        <th>
            Cost per night
        </th>
    </tr>

    @foreach (var item in Model.Rooms)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoomNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomType.Room_Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomCosts)
            </td>
            <td>
                @Html.ActionLink("Edit Details", "AlterRooms", new { Id = item.Id }) |
                @Html.ActionLink("Delete", "DeleteRooms",
                       new { Id = item.Id },
                        new
                        {
                            onclick =
                        "return confirm('Are you sure you wish to delete this room?');"
                        })
            </td>

        </tr>
    }
</table>