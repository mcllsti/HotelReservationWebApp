<h2>Check Availability</h2>
<br/>



@using (Ajax.BeginForm("GetResults", "Availability",null, new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "viewPlaceHolder" }))
{
    @*@Html.AntiForgeryToken()*@

    <div class="form-horizontal" style="background-color:#EB6864; padding-left:5%; border:solid; border-color:darkblue; border-radius:10px;">

        <table style="width:100%">
            <tr>
                <th>Arrival</th>
                <th>Departure</th>
                <th>RoomType</th>
            </tr>
            <tr>
                <td>
                    <div class="form-group">
                       
                        <div class="col-md-10">
                            <div>
                                @{var DT = Html.DateTime("Arrival", Model.Arrival, dateInCalendar: true);  }
                                @DT.DateCalendar(
                    inLine: false,
                    calendarOptions: new CalendarOptions
                    {
                        ChangeYear = true,
                        ChangeMonth = true
                    })
                            </div>

                            @*@Html.EditorFor(model => model.Arrival, new { htmlAttributes = new { @class = "form-control" } })*@
                            @Html.ValidationMessageFor(model => model.Arrival, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        
                        <div class="col-md-10">
                            <div>
                                @{var DR = Html.DateTime("Departure", Model.Departure, dateInCalendar: true);  }
                                @DR.DateCalendar(
                    inLine: false,
                    calendarOptions: new CalendarOptions
                    {
                        ChangeYear = true,
                        ChangeMonth = true
                    })
                            </div>
                            @*@Html.EditorFor(model => model.Departure, new { htmlAttributes = new { @class = "form-control" } })*@
                            @Html.ValidationMessageFor(model => model.Departure, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </td>
                <td>
                    <div class="form-group">
                       
                        <div class="col-md-10">
                            @Html.DropDownList("RoomTypeId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.RoomType, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Check Availability" class="btn btn-default" />
                           
                        </div>
                    </div>
                </td>
            </tr>
        </table>
    </div>

       

    <div id="viewPlaceHolder">
        

    </div>





}





